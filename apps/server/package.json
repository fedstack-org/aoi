    "@fastify/formbody": "^7.4.0",
    "@fastify/jwt": "^7.2.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.2.0",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@lcpu/iaaa": "^1.0.0",
    "@sinclair/typebox": "^0.32.19",
    "@types/nodemailer": "^6.4.14",
    "bcrypt": "^5.1.1",
    "fastify": "^4.25.1",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.3.2",
    "mongodb": "^6.3.0",
    "nodemailer": "^6.9.11",
