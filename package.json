{
  "name": "@aoi-js/workspace",
  "packageManager": "yarn@3.6.2",
  "license": "AGPL-3.0-only",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "zx": "^7.2.3"
  },
  "scripts": {
    "postinstall": "husky install",
    "all:build": "yarn workspaces foreach -t run build",
    "all:check-lint": "yarn workspaces foreach run lint",
    "all:check-format": "yarn workspaces foreach run format",
    "all:check-type": "yarn workspaces foreach run type-check",
    "all:check": "concurrently \"yarn:all:check-*\"",
    "git:precommit": "run all:check"
  },
  "dependencies": {
    "xlsx": "^0.18.5"
  }
}
